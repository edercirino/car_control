<h1>My Cars</h1>

<%= link_to "Add new Car", new_car_path %>

<table class="table table-bordered">
  <tr>
    <th>Cars</th>
    <th>Action</th>
  </tr>
  <%@cars.each do |car|%>
    <tr>
      <td><%= link_to car.name, car%></td>
      <td>
        <div class="d-flex gap-2">
          <%= link_to "Edit", edit_car_path(car), class: "btn btn-warning btn-sm" %>
          <%= button_to "Delete", car_path(car),
            method: :delete, data:{"turbo-confirm": "Are you sure?"},
            class: "btn btn-danger btn-sm"%>
        </div>
      </td>
    </tr>

  <%end%>
</table>